<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clarity_won_solid"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pointDate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:padding="5dp"
        android:text="20240102"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/pointCategory"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pointCategory"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/pointDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pointValue"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/pointValue"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="right|center_vertical"
        android:textSize="15sp"
        android:text="1000"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/pointCategory"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>