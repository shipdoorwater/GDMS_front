<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".point.WithdrawPointActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/img_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="출금"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 포인트 : "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/enteredAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력 금액"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:padding="20dp"
        android:rowCount="4"
        android:columnCount="3">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btnCancel"
            android:text="취소"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btnBackSpace"
            android:text="←"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />

    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 계좌번호 입력 화면 -->
    <LinearLayout
        android:id="@+id/accountInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/enteredAmount">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌번호 입력"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/accountNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="계좌번호를 입력하세요"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="확인"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>