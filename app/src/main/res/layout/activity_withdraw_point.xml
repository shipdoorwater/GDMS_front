<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".point.WithdrawPointActivity">

    <LinearLayout
        android:id="@+id/linearLayout18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_arrow_left" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="포인트 출금"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 포인트 : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/enteredAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력 금액"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:padding="10dp"
        android:rowCount="4"
        android:columnCount="3">

        <Button
            android:id="@+id/btn1"
            android:textSize="16sp"
            android:text="1"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="16sp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btnCancel"
            android:text="취소"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />
        <Button
            android:id="@+id/btnBackSpace"
            android:text="←"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            />

    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:backgroundTint="#E2E2E2"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 계좌번호 입력 화면 -->
    <LinearLayout
        android:id="@+id/accountInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="계좌번호 입력"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/accountNumberInput"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="계좌번호를 입력하세요" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:backgroundTint="#E2E2E2"
            android:textColor="@color/black"
            android:text="확인" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>