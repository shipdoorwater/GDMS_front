<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:id="@+id/textViewStoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="결제금액 확인"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/store_mini" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25sp"
                    android:text="업체 정보를 확인해주세요"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewShopName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_marginTop="50dp"
                android:text="Shop Name: " />


            <TextView
                android:id="@+id/textViewBizNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:text="BizNo: "/>

            <TextView
                android:id="@+id/textViewAdrs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:text="adrs: "/>

            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="눌러서 금액을 입력"
                android:inputType="number"
                android:textSize="20sp"
                android:gravity="right"
                />
        </LinearLayout>

        <Button
            android:id="@+id/buttonPay"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="결제하기"
            android:textSize="20sp"
            />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
